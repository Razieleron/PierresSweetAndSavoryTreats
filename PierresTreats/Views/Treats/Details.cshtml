@{
  Layout = "_Layout";
}
@using PierresTreats.Models
@model PierresTreats.Models.Treat

<h2>Treat Details</h2>
<hr />
<h3>Treat Name: @Html.DisplayFor(model => model.TreatName)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This treat has no associated flavors yet!</p>
}
else
{<p>This meal has the flavors of:</p>
  <ul>
    @foreach (FlavorTreat fish in Model.JoinEntities)
    {
      <li>  @fish.Flavor.FlavorName</li>
      @using (Html.BeginForm("DeleteFish", "Flavors"))
      {
        @Html.Hidden("FishId", fish.FlavorTreatId)
      }

    }
  </ul>
}



