@{
  Layout = "_Layout";
}
@using PierresTreats.Models
@model PierresTreats.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>Flavor Name: @Html.DisplayFor(model => model.FlavorName)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor has no associated treats yet!</p>
}
else
{<p>This flavor has the following associated treats:</p>
  <ul>
    @foreach (FlavorTreat fish in Model.JoinEntities)
    {
      <li>  @fish.Treat.TreatName</li>
      @using (Html.BeginForm("DeleteFish", "Flavors"))
      {
        @Html.Hidden("FishId", fish.FlavorTreatId)
      }

    }
  </ul>
}
<a href='@Url.Action("Delete", new { id = Model.FlavorId })'>
  <button type="button" class="button">Delete this Flavor</button>
</a>



@Html.ActionLink("Edit this Flavor", "Edit", "Flavors", new {id = Model.FlavorId})
@Html.ActionLink("Add a Treat", "AddTreat", "Flavors", new {id = Model.FlavorId})
  </a>